{{#if home}}
<div class="row justify-content-center align-items-md-stretch">
          <div class="col-md-6 h-100 w-100">
{{/if}}

<main>
          {{#if news}}

<div class='container-fluid px-4'>
          <div class='bg-dark row  gx-5 gy-3'>
                    <div class='col-sm-3'>
                              
                    </div>
                    <div class='col-sm-6'>
                              <div class='row mt-1'>
                              {{#each newsList}}
                              
                              
                              <div class='col-md-6 position-relative  mt-1 bg-dark mb-1  text-light rounded-3 newsItem'>
                                        <div class='row p-1 border bg-light rounded-3 newsItemSelected newsItemContainer'>
                                                
                                                  {{#if newsImgSrc}}
                                                  <figure class='figure newsFigure'>
                                                            <img class='figure-img img-fluid rounded  newsItemImgAnchor'  src={{newsImgSrc}}>
                                                          
                                                            <figcaption class='newsCaption text-light'>
                                                                      <div class='row figureRow'>
                                                                                
                                                                                <div class='col rounded-2 newsHeadline'>
                                                                                          <p class="text-break newsItemText">{{newsHeadline}}</p>
                                                                                          <p class='text-break newsItemDate'>{{newsDate}}</p>
                                                                                </div>
                                                                                <div class='col-sm-2 rounded-2 newsReadMore'>
                                                                                          <a id='newsReadMoreAnchor' href={{newsLink}}>
                                                                                
                                                                                                    <img class='animateButtonForward rounded' width='24' height='32' src={{readMoreImgSrc}}>
                                                                                                   
                                                                                          </a>
                                                                                </div>
                                                                      </div>
                                                                      
                                                            </figcaption>
                                                  </figure>
                                                
                                                 
                                                  {{/if}}
                                                 
                                        </div>
                              </div>

                              
                              {{/each}}  
                              </div>
                    </div>
                    <div class='col-sm-3'>
                    
                    </div>
          
          </div>
</div>
          {{/if}}
</div>

          {{#if home}}

          </div>
          </div>
          {{/if}}
         
          {{#if media}}
          <div id='main-media-container' class='container-fluid bg-dark bg-light'>
                    <div class='row g-2 justify-content-center'>
                              {{#each mediaList}}
                              <div class="col-sm-8 rounded-2">
                                        <h1 id='mediaHeadline'>{{mediaTitle}}</h1>
                                        <a href='#'>
                                        <div class="d-flex p-3 border justify-content-evenly rounded-2 bg-dark mediaItem">
                                                 
                                                  {{{mediaItem}}}
                                                  
                                        </div>
                                        </a>
                              </div>
                             
                           
                    {{/each}}
                    </div>
          </div>
          {{/if}}

          {{#if home}}
          <div id='home-container' class='container'>
                    <div class='row g-2 justify-content-space-between align-items-center bg-dark'>
                              
                              
                              <div id='headlines-row' class='row'>
                                        <div class='col-2'> <h2 style='color:var(--bs-dark); display:inline-block'></h2> </div>
                              <div class='col-8'><h2 style='color:var(--bs-dark); display:inline-block'></h2></div>
                              
                              
                              <div class='col-2'><h2 style='color:var(--bs-dark); display:inline-block'></h2></div>
                              </div>
                              <div id='left-main-col' class='col-md-2' >
                                        <div class='row p-3'>
                                                  {{#each leftList}}
                                                  
                                                  <div id='leftItem' class='col mb-5'>
                                                            
                                                            <div class="card rounded-4  bg-light">
                                                                      <img src={{leftItemImg}} alt={{leftItemImgAltTxt}} class='rounded-2 leftItemImg'>
                                                                      <div class="card-body">
                                                                     
                                                                                {{#itemContent}}
                                                                                {{{item}}}
                                                                                {{/itemContent}}
                                                                      </div>
                                                                      
                                                            
                                                            
                                                            </div>
                                                  </div>
                                                  
                                                  
                                        
                                        {{/each}}
                              </div>
                                        
                              </div>
                              
                              <div id='centre-main-col' class='col-md-8'>
                                                  
                                                           
                                                  <div class='row p-2'>
                                                           
                                                  {{#each mainList}}
                                                  
                                                 <div id='mainItem' class='bg-transparent col-sm-6 mt-2 align-items-center news-col'>
                                                            {{{mainListItem}}}
                                                  
                                                  </div>
                                                  
                                                  {{/each}}
                                                  {{#each anchorItems}}
                                                  <div style='height:auto;' id='mainItem' class='col-sm-6 pb-2 news-col mt-2 text-align-center'>
                                                  <div class='row justify-content-center align-items-center'>
                                                            <div class='col-sm-6 mb-0'>
                                                            <h2 class='centreAnchorItemText'>{{{anchorText}}}</h2>
                                                            </div>
                                                            
                                                            
                                                            <div id='centreAnchorContainer' class='col-sm-12 text-align-center'>
                                                                      
                                                                      <a class='mx-auto centreAnchorItem'href={{anchorRef}}>
                                                                                <img class='d-block mx-auto rounded img-fluid' src='{{anchorUrl}}'>
                                                                      </a>
                                                            </div>
                                                            </div>
                                                  </div>
                                                  </div>
                                                  {{/each}}
                                                  
                              </div>
                             
                              <div id='right-main-col' class='col-sm-2 me-0'>
                              
                                        {{#each rightList}}
                                        <div class='row  p-3'>
                                                  <div class='col-sm-6 '>
                                                  <div id="rightItem" class="card">
                                                            
                              <div class="card-body">
                                        <h5 class="card-title">{{rightItemTitle}}</h5>
                              <img width={{imgWidth}} height={{imgHeight}} src={{rightItemImg}} class="card-img-top" alt={{rightItemImgAltTxt}}>
                                        {{#itemContent}}
                              {{{item}}}

                              {{#if calendar}}
                              <div class='row'>
                                        <div id='calendarHeadMonth'class='calendarHead col'>
                                                  <div class='col-sm-1 d-inline'> <button onclick='prevMonth();calendarItems()' class='btn  prevButton' type='button'></button></div>
                                                  <div  id='calMonthValue' class='col-sm-1 d-inline'>Month</div>
                                                  <div class='col-sm-1 d-inline'> <button class='btn  nextButton' onclick='nextMonth()'type='button'></button>
                                                  </div>
                                        <div id='calendarHeadYear'class='calendarHead col'>
                                                  <div class='col-sm-1 d-inline'> <button  class='btn  prevButton' onclick='prevYear()'></button></div>
                                                  <div  id='calYearValue' class='col-sm-1 d-inline'>Year</div>
                                                  <div class='col-sm-1 d-inline'> <button class='btn  nextButton' type='button' onclick='nextYear()'></button>
                                                  </div>
                                        </div>
                                        <div id='calendarHeadAge' class='calendarHead col'>
                                                  <div class='col-sm-1 d-inline'> <button class='btn  prevButton' type='button' onclick='nextAge()'></button></div>
                                                  <div id='calAgeValue' class='col-sm-1 d-inline'>Age</div>
                                                  <div class='col-sm-1 d-inline'> <button class='btn  nextButton' type='button' onclick='nextAge()'></button>
                                                  </div>
                                        </div>
                              </div>
                              {{#calendarItemDetails}}
                              <div class='row'>
                                                  
                              <div class='col-sm-12'>
                                        <div class='row'>
                                                  <div class='col-12 mt-2 border-top border-dark calendarItemDate'>
                                                  
                                                            {{calendarItemDate}}
                                                  
                                                  </div>
                                                  <div class='col-12 border-bottom border-dark  calendarItemInfo'>
                                                            {{calendarItemInformation}}
                                                  </div>
                                                  
                                        </div>
                              
                              
                              </div>
                              </div>
                              {{/calendarItemDetails}}

                                        <div class='row'>
                                                  <div class='col-sm-12 mt-5'>
                                                            Next event
                                                  <div class='col border-top border-dark '>
                                                            {{calendarNextEvent}}
                                                  </div>
                                                  </div>    
                                        <div class='col-sm-12 mt-5'>
                                                  Past event
                                                  <div class='col border-top border-dark'>
                                                            {{calendarPastEvent}}
                                                  </div>
                                        </div>

                                        </div>
                              {{/if}}
                    {{/itemContent}}
                                                            </div>

                                                  </div>
                                                  </div>
                                        </div>
                                        {{/each}}
                                        
                              </div>
                              </div>

                              
                    </div>
                    
          </div>

          <!-- JOIN US -->
        
          
          {{/if}}
          {{#if join}}
          <div class="h-100 w-100 p-5 text-white bg-dark rounded-1">
                    
                    <h2>{{title}}</h2>
                    <div class='row justify-content-center align-items-center'>
                              
                              <div id='dojoListCol' class='col-sm-3 align-self-start  mt-3  ms-0 p-1'>
                                        <h2>Dojo members</h2>
                                        <table class='table text-white'>
                                                  <thead>
                                                            <tr>
                                                                      <th scope='col'>Dojo name</th>
                                                            </tr>
                                                  </thead>
                                                  
                                                  <tbody>
                                                            
                                                           
                                                                      {{#dojoList}}
                                                                      {{#each dojoMembers}}
                                                                      <tr>
                                                                      <td>{{.}}</td>
                                                                      </tr>
                                                                      {{/each}} 
                                                                      {{/dojoList}}
                                                            
                                                            
                                                  </tbody>
                                        </table>
                              </div>
                              <div class='col-sm-9 mt-3 ms-0 p-1'>
                                        <div class='row'>
                                                  <div class='col-sm-12 mb-2 p-3'>
                                                            <h2>Find our members Dojo's here</h2>
                                                            <iframe id='mapLocation'
                                                                      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1571.8909803424451!2d23.66695691968576!3d38.00554596598539!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a1bb55418b99bf%3A0x72439d134dce5e86!2sHaidari%20Judo%20Academy!5e0!3m2!1sen!2sgr!4v1631187912765!5m2!1sen!2sgr"
                                                                      width="100%" height="500px;" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                                                  </div>
                                        </div>
                                        <div class='row'>
                                        <div class='col-sm-12 align-self-end'>
                                        
                                        
                                                  <p>{{moreText}}</p>
                                                  <p>{{welcomeText}}</p>
                                                  <button type="button" class="btn joinButton" data-bs-toggle="modal" data-bs-target="#joinModal">
                                                            Join!
                                                  </button>
                                                  
                                        </div>
                                        <div class='row'>
                                                  <div class='col-sm-12 mt-5 ms-1 p-1 rounded-2 text-dark bg-light align-self-end'>
                                                  <form class='needs-validation' novalidate>
                                                  <div class='input-group mt-3 mb-3'>

                                                                      <span class="input-group-text" id="fname">First & Last Name</span>
                                                                      <input type="text" class="form-control" placeholder="Please type your first & last name here" aria-label="fname" aria-describedby="fname" value='' required>
                                                  <div class="input-group">
                                                            <span class="input-group-text">Type your message here</span>
                                                            <textarea style="height:250px;"class="form-control" value='' aria-label="Message" required></textarea>
                                                  </div>
                                                  <div class='invalid-feedback'>
                                                            Please enter appropriate entries.
                                                  </div>
                                                            <button type='submit' class='btn msgButton' onclick='form_validation()'>
                                                                      Message
                                                            
                                                            </button>
                                                            </div>
                                                            </form>
                                                  </div>
                                        
                                        </div>
                              </div>
                              </div>
                   
                    <!-- Join Modal -->
                    <div class="modal fade" id="joinModal" tabindex="-1" aria-labelledby="joinModalLabel"
                              aria-hidden="true">
                              <div class="modal-dialog">
                                        <div class="modal-content">
                                                  <div class="modal-header">
                                                            <h5 class="modal-title" id="joinModalLabel">Modal title</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                      aria-label="Close"></button>
                                                  </div>
                                                  <div class="text-dark modal-body">
                                                            <form class='needs-validation' novalidate>
                                                                      <div class='row'>
                                                                                <div class='col-sm-6'>
                                                                      {{!-- First name --}}
                                                                      <label class='col-form-label'for="fname">First name:</label>
                                                                      <input class='col-sm-6 col-form-control' value=''  type="text" id="fname" name="fname" required>
                                                                      <div class='invalid-feedback'>
                                                                                Please enter a valid first name.
                                                                      </div><br><br>
                                                                      {{!-- Last name --}}
                                                                      <label class='col-form-label' for="lname">Last name:</label>
                                                                      
                                                                      <input class='col-sm-6 col-form-control' type="text" id="lname" name="lname" required>
                                                                      <div class='invalid-feedback'>
                                                                                Please enter a valid last name.
                                                                      </div>
                                                                      <br><br>
                                                                      </div>
                                                                      
                                                                      <div class='col-sm-6'>
                                                                      {{!-- Email --}}
                                                                      <label class='col-form-label' for="email">Email:</label>
                                                                      <input class='col-sm-6 col-form-control' type="text" id="email" name="email" required>
                                                                      <div class='invalid-feedback'>
                                                                                Please enter a valid email.
                                                                      </div>
                                                                      <br><br>

                                                                      {{!-- Dojo --}}
                                                                      <label class='col-form-label' for="dojo">Dojo:</label>
                                                                      <input class='col-sm-6 col-form-control' type="text" id="dojo" name="dojo">
                                                                      <br><br>
                                                                      </div>
                                                                      </div>
                                                                      <p>Click the "Submit" button to complete your application form.</p>

                                                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                      <button id='submitJoinBtn' onclick='form_validation()' type="submit" class="btn">Submit</button>
                                                          
                                                            </form>
                                                            
          
                                                  </div>
                                                 
                                                  
                                        </div>
                              </div>
                    </div>


          </div>
          
          {{/if}}
          

          {{#if results}}
          <div class='container-fluid bg-dark resultsContainer'>
                    <div class='row'>
                              <div class='col-12'>
                              <h2 class='text-light text-break'>Judo events and results</h>
                              <h3 class='text-primary text-break'>Latest</h3>
                              </div>
                              
                                        
 

          <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModal" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                              <div class="modal-content">
                                        <div class="modal-header">
                                                  <h5 class="modal-title text-dark" id="searchModal">More events and results</h5>
                                                  <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                                  <form class='needs-validation' novalidate>
                                                            <div class='container-fluid'>
                                                                      <div class='row'>
                                                                                <div class='col mb-1'>
                                                                                          <label for="generalQueryBox" class="col-form-label text-dark">Search for:</label>
                                                                                          <input type="text" class="form-control" id="generalQueryBox"  value='' required>
                                                                                          <div class='invalid-feedback'>Please enter a search query!</div>
                                                                                </div>
                                                                      </div>

                                                                      <div class='row'>
                                                            {{#each searchParams}}

                                                                     
                                                                      <div id='search-category-container' class='col-md-3'>
                                                                      
                                                            
                                                                                {{!-- <button class="select btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                                                                          data-bs-toggle="dropdown" aria-expanded="false">
                                                                                          Category
                                                                                </button> --}}
                                                                                {{!-- <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2"> --}}
                                                                                          <div class="input-group mb-3">
                                                                                                    <div class="input-group-prepend">
                                                                                                              <label class="input-group-text" for="inputGroupSelect01">Category</label>
                                                                                                    </div>
                                                                                                   
                                                                                                              
                                                                                                    
                                                                                          
                                                                                          <select class="custom-select" id="inputGroupSelect01">
                                                                                          {{#each categories}}
                                                                                                    <option value={{.}}type='button' class="dropdown-item">{{.}}</option>
                                                                                          {{/each}}
                                                                                          </select>
                                                                                {{!-- </ul> --}}
                                                                                </div>

                                                                                </div>
                                                                               
                                                                                
                                                                               

                                                                      <div id='search-month-container' class='col-md-3'>
                                                                      
                                                                      
                                                                                
                                                                                <div class="input-group mb-3">
                                                                                          <div class="input-group-prepend">
                                                                                                    <label class="input-group-text" for="inputGroupSelect01">Month</label>
                                                                                          </div>
                                                                                
                                                                                
                                                                                
                                                                                
                                                                                          <select class="custom-select" id="inputGroupSelect01">
                                                                                                    {{#each months}}
                                                                                                    <option value={{.}}type='button' class="dropdown-item">{{.}}</option>
                                                                                                    {{/each}}
                                                                                          </select>
                                                                                          
                                                                                </div>
                                                                                          

                                                                                          
                                                                                         
                                                                                         
                                                                      
                                                                      </div>
                                                                      <div id='search-year-container' class='col-md-3'>
                                                                      
                                                                      
                                                                                <div class="input-group mb-4">
                                                                                          <div class="input-group-prepend">
                                                                                                    <label class="input-group-text" for="inputGroupSelect01">Year</label>
                                                                                          </div>
                                                                                
                                                                                
                                                                                
                                                                                
                                                                                          <select class="custom-select" id="inputGroupSelect01">
                                                                                                    {{#each years}}
                                                                                                    <option value={{.}}type='button' class="dropdown-item">{{.}}</option>
                                                                                                    {{/each}}
                                                                                          </select>
                                                                                
                                                                                </div>
                                                                      </div>
                                                                      <div id='search-event-container' class='col-md-3'>
                                                                      
                                                                      
                                                                                <div class="input-group mb-3">
                                                                                          <div class="input-group-prepend">
                                                                                                    <label class="input-group-text" for="inputGroupSelect01">Types</label>
                                                                                          </div>
                                                                                
                                                                                
                                                                                
                                                                                
                                                                                          <select class="custom-select" id="inputGroupSelect01">
                                                                                                    {{#each types}}
                                                                                                    <option value={{.}}type='button' class="dropdown-item">{{.}}</option>
                                                                                                    {{/each}}
                                                                                          </select>
                                                                                
                                                                                </div>
                                                                      </div>
                                                            {{/each}}

                                                                      </div>
                                                                      <div id='selected-search-params' class='row'>
                                                                                <div class='col-md-3'>
                                                                                          
                                                                                </div>
                                                                      </div>
                                                            </div>
                                                            <button onclick='form_validation()'type="submit" class="btn searchButton">Search</button>
                                                            <button type="button" class="btn btn-secondary " data-bs-dismiss="modal">Close</button>
                                                  </form>
                                                  
                                                  </div>
                                                  {{!-- <div class="modal-footer">
                                                            
                                                            <button type="submit" class="btn searchButton">Search</button>
                                                  </div> --}}
                                        </div>
                                        
                              </div>
                    </div>
          </div>
                    </div>
                    <table class='table table-dark table-striped resultsTable'>
                              <thead>
                                        <tr>
                                                
                                        </tr>
                                        
                              </thead>
                              <tbody>
                                        
                    {{#each eventList}}
                    <tr class='underlineSelection'>
                    
                              <td>{{eventLocation}}</td>
                              <td>{{eventName}}</td>
                              <td>{{eventLinks}}</td>
                    </tr>
                               



                    {{/each}}
                    </tbody>    
                    </table>
          </div>
          <div class='col-12  bg-dark'>
          <button type="button" class="btn offset-sm-10 mt-2 mb-2 searchButton" data-bs-toggle="modal" data-bs-target="#searchModal"
                    data-bs-whatever="">Search</button>
                    </div>
          </div>
         
          {{/if}}
          
</main>
